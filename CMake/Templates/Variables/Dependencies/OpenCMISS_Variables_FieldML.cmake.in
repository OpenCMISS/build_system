#[=======================================================================[.rst:
OpenCMISS FieldML Variables
---------------------------

Setup the variables to use FieldML with OpenCMISS.

#]=======================================================================]

set(OpenCMISS_FIND_SYSTEM_FieldML OFF CACHE BOOL "Find a system version of FieldML rather than an OpenCMISS version." FORCE)

# FieldML repository options
set(OpenCMISS_FieldML_VERSION 0.5.0 CACHE STRING "The version/tag of FieldML to use." FORCE)
set(OpenCMISS_FieldML_GIT_HOST @OC_DEPENDENCIES_GIT_HOST@ CACHE STRING "The hostname of the FieldML Git repository." FORCE)
set(OpenCMISS_FieldML_GIT_ORGANISATION @OC_DEPENDENCIES_GIT_ORGANISATION@ CACHE STRING "The organisation of the FieldML Git repository." FORCE)
set(OpenCMISS_FieldML_GIT_BRANCH @OC_DEPENDENCIES_GIT_BRANCH@ CACHE STRING "The branch of the FieldML Git repository to use." FORCE)

# FieldML configuration options
set(OpenCMISS_FieldML_WITH_HDF5 NO CACHE STRING "Enable building FieldML with HDF5." FORCE)
set(OpenCMISS_FieldML_WITH_JAVA_BINDINGS NO CACHE STRING "Enable building FieldML with Java bindings." FORCE)
